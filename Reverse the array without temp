#include<stdio.h>
int main()
{
    int n,arr[100],temp;
    printf("size of array: ");
    scanf("%d",&n);
    int i,j;
    printf("elements of array: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    i=0,j = n-1 ;
   while(i<j)
   {
        {
           arr[i] = arr[i]+arr[j];
           arr[j]= arr[i]- arr[j];
           arr[i]=arr[i]-arr[j];
        }
        i++;
        j--;
    }
    printf("resultany array: ");
    for(i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
}
    

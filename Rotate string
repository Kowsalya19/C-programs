#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    scanf("%s", str); 

    int len = strlen(str);
    char original[100];
    strcpy(original, str);  
    int count = 0;

    do {
        char first = str[0];

        // Left shift characters
        for (int i = 0; i < len - 1; i++) {
            str[i] = str[i + 1];
        }

        str[len - 1] = first;  
        count++;
    } while (strcmp(str, original) != 0); 

    printf("%d\n", count);

    return 0;
}
